{
  "id": "multichannel",
  "name": "Sendblue + ClawdTalk",
  "description": "SMS + Voice via Sendblue and ClawdTalk",
  "version": "1.0.0",
  "channels": ["sendblue", "clawdtalk"],
  "configSchema": {
    "type": "object",
    "properties": {
      "sendblue": {
        "type": "object",
        "properties": {
          "apiKey": { "type": "string" },
          "apiSecret": { "type": "string" },
          "phoneNumber": { "type": "string" }
        },
        "required": ["apiKey", "apiSecret", "phoneNumber"]
      },
      "clawdtalk": {
        "type": "object",
        "properties": {
          "apiKey": { "type": "string" },
          "webhookPort": { "type": "number", "default": 3200 },
          "agentId": { "type": "string" }
        },
        "required": ["apiKey"]
      }
    }
  }
}